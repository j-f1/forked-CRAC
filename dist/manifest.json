{
  "name": "Critical Review @ CAB",
  "version": "1.0",
  "description": "An extension to integrate Courses@Brown with The Critical Review.",
  "manifest_version": 2,
  "permissions": [
    "declarativeContent",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://cab.brown.edu/"
      ],
      "js": [
        "js/inject.js"
      ],
      "css": [
        "css/styles.css"
      ]
    }
  ]
}